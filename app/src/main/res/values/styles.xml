<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="PrimaryTextStyle">
        <item name="android:textSize">@dimen/primary_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingTop">@dimen/primary_text_top_padding</item>
        <item name="android:paddingBottom">@dimen/primary_text_bottom_padding</item>
        <item name="android:paddingRight">@dimen/primary_text_right_padding</item>
        <item name="android:paddingLeft">@dimen/primary_text_left_padding</item>
    </style>

    <style name="SubtextStyle">
        <item name="android:textSize">@dimen/subtext</item>
        <item name="android:paddingBottom">@dimen/subtext_bottom_padding</item>
        <item name="android:paddingRight">@dimen/subtext_right_padding</item>
        <item name="android:paddingLeft">@dimen/subtext_left_padding</item>
    </style>



</resources>
